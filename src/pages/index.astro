---
import MainLayout from '../layouts/MainLayout.astro';
import BannerSection from '../components/BannerSection.astro';
import StatsFactsSection from '../components/StatsFactsSection.astro';
import FeaturedProjectsSection from '../components/FeaturedProjectsSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import WhyChooseUsSection from '../components/WhyChooseUsSection.astro';
import TestimonialSection from '../components/TestimonialSection.astro';
import MeetOurTeamSection from '../components/MeetOurTeamSection.astro';
import PricingSection from '../components/PricingSection.astro';
import FaqSection from '../components/FaqSection.astro';
import RecentNewsSection from '../components/RecentNewsSection.astro';
import GetInTouchSection from '../components/GetInTouchSection.astro';

// Services data
const servicesData = [
  {
    id: "one",
    title: "AI Agents & Automations",
    description: "We build custom AI agents and n8n workflows to handle tasks like inbox triage, lead scoring, and data cleanup, freeing up your team for high-value work.",
    image: "/template/assets/images/services/services-img-1.jpg"
  },
  {
    id: "two", 
    title: "All-in-One Stack Setup",
    description: "We deploy and configure your core stack—SuiteCRM, Mautic, and Nextcloud—into one seamless system for a single source of truth.",
    image: "/template/assets/images/services/services-img-2.jpg"
  },
  {
    id: "three",
    title: "CRM Migration & Cleanup", 
    description: "We manage the secure import of your existing customer data, handle field mapping, and run deduplication processes to ensure your CRM data is clean and reliable.",
    image: "/template/assets/images/services/services-img-3.jpg"
  },
  {
    id: "four",
    title: "Email Deliverability & Warm-up",
    description: "We configure SPF, DKIM, and DMARC, set up your sending domains, and implement a strategic warm-up plan to ensure your emails land in the inbox, not spam.",
    image: "/template/assets/images/services/services-img-4.jpg"
  }
];
---

<MainLayout title="صفحه اصلی" description="AI-powered, lean business stacks">
  <BannerSection />
  <StatsFactsSection />
  <FeaturedProjectsSection />
  <ServicesSection servicesData={servicesData} />
  <WhyChooseUsSection />
  <TestimonialSection />
  <MeetOurTeamSection />
  <!-- <PricingSection /> -->
  <FaqSection />
  <RecentNewsSection />
  <GetInTouchSection />
