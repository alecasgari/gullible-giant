---
// Testimonial Section Component
import { client } from '../../tina/__generated__/client';

// Fetch testimonials from TinaCMS
const { data } = await client.queries.testimonialConnection();
const testimonials = data.testimonialConnection.edges.map(edge => edge.node);

// Helper function to render stars
const renderStars = (rating: number) => {
  const stars = [];
  for (let i = 1; i <= 5; i++) {
    if (i <= rating) {
      stars.push(`<iconify-icon icon="solar:star-bold" class="fs-6 text-white"></iconify-icon>`);
    } else {
      stars.push(`<iconify-icon icon="solar:star-line-duotone" class="fs-6 text-white"></iconify-icon>`);
    }
  }
  return stars.join('');
};
---

<!--  Testimonial Section -->
<section class="testimonial py-5 py-lg-11 py-xl-12 bg-light-gray">
  <div class="container">
    <div class="d-flex flex-column gap-5 gap-xl-11">
      <div class="row gap-7 gap-xl-0">
        <div class="col-xl-4 col-xxl-4">
          <div class="d-flex align-items-center gap-7 py-2" data-aos="fade-right" data-aos-delay="100"
            data-aos-duration="1000">
            <span
              class="round-36 flex-shrink-0 text-dark rounded-circle bg-primary hstack justify-content-center fw-medium">05</span>
            <hr class="border-line bg-white">
            <span class="badge text-bg-dark">Testimonial</span>
          </div>
        </div>
        <div class="col-xl-8 col-xxl-7">
          <div class="row">
            <div class="col-xxl-8">
              <div class="d-flex flex-column gap-6" data-aos="fade-up" data-aos-delay="100"
                data-aos-duration="1000">
                <h2 class="mb-0">Stories from clients</h2>
                <p class="fs-5 mb-0 text-opacity-70">Real experiences, genuine feedbackâ€”discover how our creative
                  solutions have transformed brands and elevated businesses.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row gap-7 gap-lg-0">
        {testimonials.map((testimonial, index) => (
          <div class={`col-lg-4 ${index === 1 ? 'col-xl-6' : 'col-xl-3'} d-flex align-items-stretch`}>
            <div class={`card ${testimonial.type === 'primary' ? 'bg-primary' : testimonial.type === 'dark' ? 'bg-dark' : ''} w-100`} 
                 data-aos="fade-up" data-aos-delay={`${(index + 1) * 100}`} data-aos-duration="1000">
              <div class="card-body d-flex flex-column gap-5 gap-xl-11 justify-content-between">
                <div class="d-flex flex-column gap-4">
                  <p class={`mb-0 ${testimonial.type === 'dark' ? 'text-white text-opacity-70' : ''}`}>Hear from them</p>
                  <h4 class={`mb-0 ${testimonial.type === 'dark' ? 'text-white pe-xl-2' : ''}`}>
                    {testimonial.quote}
                  </h4>
                  {testimonial.type === 'dark' && (
                    <div class="hstack gap-2">
                      <ul class="list-unstyled mb-0 hstack gap-1" set:html={renderStars(testimonial.rating)}></ul>
                      <h6 class={`mb-0 ${testimonial.type === 'dark' ? 'text-white' : ''} fw-medium`}>{testimonial.rating}.0</h6>
                    </div>
                  )}
                </div>
                <div class={`d-flex align-items-center ${testimonial.type === 'dark' ? 'justify-content-between' : ''}`}>
                  <div class="hstack gap-3">
                    <img src={testimonial.avatar} alt={testimonial.name}
                      class="img-fluid rounded-circle overflow-hidden flex-shrink-0" width="60" height="60">
                    <div>
                      <h5 class={`mb-1 fw-normal ${testimonial.type === 'dark' ? 'text-white' : ''}`}>{testimonial.name}</h5>
                      <p class={`mb-0 ${testimonial.type === 'dark' ? 'text-white text-opacity-70' : ''}`}>{testimonial.company}</p>
                    </div>
                  </div>
                  {testimonial.type === 'dark' && (
                    <span><img src="/template/assets/images/testimonial/quete.svg" alt="quote"
                        class="img-fluid flex-shrink-0"></span>
                  )}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>